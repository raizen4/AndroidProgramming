<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="name of the song"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/name_of_the_song"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold|italic" />
   <ImageView
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:id="@+id/image_of_the_song"
       android:layout_toStartOf="@+id/name_of_the_song"
       android:layout_alignBottom="@+id/name_of_the_song" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="duration"
        android:id="@+id/duration"
        android:textColor="#000000"
        android:layout_alignRight="@+id/name_of_the_song"
        android:layout_alignEnd="@+id/name_of_the_song"
        android:layout_alignBottom="@+id/Artist"
        android:layout_alignTop="@+id/Artist" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Artist"
        android:id="@+id/Artist"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/name_of_the_song"
        android:layout_toRightOf="@+id/image_of_the_song"
        android:layout_toEndOf="@+id/image_of_the_song" />
</RelativeLayout>