<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="90dp"
    android:layout_height="70dp"
    android:id="@+id/image_playlist" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of the playlist"
        android:id="@+id/name_playlist"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_playlist"
        android:layout_alignBottom="@+id/image_playlist"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How manyyy tracks"
        android:id="@+id/playlist_track_number"
        android:layout_alignBottom="@+id/name_playlist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/name_playlist"
        android:layout_toEndOf="@+id/name_playlist"
        android:textColor="#000000"/>
</RelativeLayout>