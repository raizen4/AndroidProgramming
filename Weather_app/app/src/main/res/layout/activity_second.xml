<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projects.boldurbogdan.weather_app.SecondActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/weather_main"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weather:"
        android:id="@+id/text_weather"
        android:layout_marginTop="112dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/data_for_weather"
        android:layout_alignTop="@+id/text_weather"
        android:layout_alignEnd="@+id/imageView"
        android:layout_toEndOf="@+id/text_weather"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:layout_above="@+id/temp_field" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp:"
        android:id="@+id/temp_field"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/text_weather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wind Speed:"
        android:id="@+id/wind_speed_field"
        android:layout_marginTop="62dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/temp_field"
        android:layout_alignStart="@+id/temp_field" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_text"
        android:layout_alignStart="@+id/temp_field"
        android:layout_marginLeft="70dp"
        android:layout_above="@+id/wind_speed_field"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:layout_below="@+id/wind_speed_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="Back_button" />

</RelativeLayout>
